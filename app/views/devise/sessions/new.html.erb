<%= form_for(resource, 
					:as => resource_name, 
					:url => session_path(resource_name),
					:class => "form-horizontal") do |f| %>
<div class="row vertical-offset-100">
	<div class="col-md-4 col-md-offset-4">
		<div class="panel panel-default">
		  	<div class="panel-heading">
		    	<h3 class="panel-title">Please sign in</h3>
		 	</div>
		  	<div class="panel-body">
		    	<form accept-charset="UTF-8" role="form">
                <fieldset>
		    	  	<div class="form-group">
		    	  		<%= f.email_field :email, 
		    	  					:required => false, 
		    	  					:autofocus => true, 
		    	  					placeholder: "E-mail", 
									class: "form-control" %>
		    		</div>
		    		<div class="form-group">
		    			<%= f.password_field :password, 
		    	  					:required => false, 
		    	  					placeholder: "Password", 
									class: "form-control" %>
		    			<%#= f.input :password, :required => false, placeholder: "Password", :class => "form-control" %>
		    		</div>
		    		<div class="checkbox">
		    			<%= f.check_box :remember_me, 
		    						:class => "checkbox inline form-control", 
		    						:as => :boolean if devise_mapping.rememberable? %> Remember me
		    	    </div>
		    	    <%= f.submit "Sign in", :class => "btn btn-lg btn-success btn-block" %>
		    		<%= render "devise/shared/links" %>
		    	</fieldset>
		      	</form>
		    </div>
		</div>
	</div>
</div>
<% end %>