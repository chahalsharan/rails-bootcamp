<div ng-controller="UsersCtrl">
    <div class="modal-header modal-resized-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title auth-form-heading">Sign in</h4>
    </div>
    <div class="modal-body modal-resized-body">
        <form role="form">
            <div class="{{isExist(user.error) && 'alert alert-error'}}" ng-bind="user.error"></div>
            <div class="form-group">
                <label for="user.email">Email</label>
                <input type="email" class="form-control" required="required" id="user.email" placeholder="E-mail" autofocus="autofocus" ng-model="user.email" >
            </div>
            <div class="form-group">
                <label for="user.password">Password</label>
                <input type="password" class="form-control" required="required" type="email" id="user.password" placeholder="Enter email" ng-model="user.password" >
            </div>
            <div class="form-group">
                <label class="checkbox">
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
        </form>
    </div>
    <div class="modal-footer modal-resized-footer">
        <button ng-click="login()" class="btn btn-lg btn-success btn-block" >Login</button>
        <%= render "devise/shared/links" %>
    </div>
</div>